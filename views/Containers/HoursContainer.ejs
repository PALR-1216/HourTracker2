      const totalEarnedData = [3000];
      const totalTaxesData = [500];
      const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun']; // Replace with appropriate labels

      // Calculate total earnings and total taxes
      const totalEarned = totalEarnedData.reduce(
        (sum, value) => sum + value,
        0
      );
      const totalTaxes = totalTaxesData.reduce(
        (sum, value) => sum + value,
        0
      );

      // Create the Chart.js pie chart
      const ctx = document
        .getElementById('incomeTaxesChart')
        .getContext('2d');
      const incomeTaxesChart = new Chart(ctx, {
        type: 'pie',
        data: {
          labels: [
            ['Total Earned', `$${totalEarnedData}`],
            ['Total Taxes', `$${totalTaxesData}`],
          ],
          datasets: [
            {
              data: [totalEarned, totalTaxes],
              backgroundColor: [
                'rgba(75, 192, 192, 0.7)',
                'rgba(255, 99, 132, 0.7)',
              ],
              borderColor: '#fff',
              borderWidth: 2,
            },
          ],
        },
        options: {
          plugins: {
            legend: {
              position: 'left',
            },
          },
          responsive: true,
          maintainAspectRatio: false,
        },
      });
    </script>




