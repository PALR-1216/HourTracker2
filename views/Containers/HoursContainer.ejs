      <div class="bg-white p-6 rounded">
        <h1 class="text-3xl font-bold mb-6">Hours</h1>
        <div class="overflow-x-auto">
            <table class="w-full border-collapse table-auto">
                <thead>
                    <tr class="bg-gray-100 text-gray-700">
                        <th class="text-center px-6 py-3 ">Date</th>
                        <th class="text-center px-6 py-3">Shift</th>
                        <th class="text-center px-6 py-3 " style="white-space: nowrap;">Break Time</th>
                        <th class="text-center px-6 py-3" style="white-space: nowrap;">Total Hours</th>
                        <th class="text-center px-6 py-3" style="white-space: nowrap;">Total Earned</th>
                        <th class="text-center px-6 py-3" style="white-space: nowrap;">Edit</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Sample Data -->
                    <% for( let i=0; i < Hours.length; i++ ) { %>
                     
                    <tr class="border-t">
                        <td class="text-center text-lg px-4 py-2" style="white-space: nowrap;"><%=Hours[i].Date%></td>
                        
                        <td class="text-center text-lg px-4 py-2" style="white-space: nowrap;"><i class="bi bi-clock-history"></i> <%=Hours[i].ClockIn%> - <%=Hours[i].ClockOut%></td>
                        <%if(Hours[i].Startbreak === "No Break") {%>
                          <td class="text-center text-lg px-4 py-2" style="white-space: nowrap;"><i class="fa-solid fa-utensils" style="color: #000000;"></i> No Break</td>


                          <%}else{%>
                            <td class="text-center text-lg px-4 py-2" style="white-space: nowrap;"><i class="fa-solid fa-utensils" style="color: #000000;"></i> <%=Hours[i].Startbreak%> - <%=Hours[i].EndBreak%></td>

  
                          <%}%>
                        
                        <td class="text-center text-lg px-4 py-2" style="white-space: nowrap;"><%=Hours[i].TotalHours%> Hours</td>
                        <td class="text-center text-lg px-4 py-2" style="white-space: nowrap;">$<%=Hours[i].TotalEarned%></td>
                        <td class="text-center text-lg px-4 py-2" style="white-space: nowrap;"><a class="no-underline underline-none text-blue-500 hover:text-blue-700 font-bold " href="#">Edit Shift</a></td>
